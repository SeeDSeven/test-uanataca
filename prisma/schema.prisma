// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL") // <- La URL de Accelerate para la app
  directUrl = env("POSTGRES_URL")      // <- La URL directa para las migraciones
}

generator client {
  provider = "prisma-client-js"
}

// Definimos el enum para la categorÃ­a
enum Category {
  frontend
  backend
  devops
  data
  mobile
  testing
  other
}

// Definimos el modelo Technology
model Technology {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  website     String?
  category    Category
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("technologies")
}